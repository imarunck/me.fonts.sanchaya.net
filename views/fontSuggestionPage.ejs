
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Page Title</title>

    <style>
        .suggestion-form {
            text-align: center;
        }

        .suggestion-form h2 {
            margin-bottom: 20px;
            margin-top: 20px;
            color: #1a73e8;
            font-size: 60px;
        }

        .form-group {
            margin-bottom: 25px;
            text-align: left;
        }

        .form-group label {
            display: block;
            font-weight: bold;
        }

        .form-group input[type="text"],
        .form-group input[type="email"],
        .form-group textarea,
        .form-group input[type="file"] {
            width: 100%;
            padding: 8px;
            border-radius: 5px;
        }

        button[type="submit"] {
            background-color: #1a73e8;
            color: white;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>
<body>
<div class="suggestion-form" >
    <h2 >SUGGEST A FONT</h2>
    <form id="suggestionForm"  style=" padding: 40px; width:50%; margin: 0 auto;font-size: large; border-radius: 5px;" >
        <div class="form-group">
            <label for="fontName">Font Name:</label><br>
            <input type="text" id="fontName" name="font_name" required />
        </div>
        <div class="form-group" >
            <label for="fontStyle">Font Style:</label><br>
            <input type="text" id="fontStyle" name="font_style" required />
        </div>
        <div class="form-group" >
            <label for="sampleParagraph">Sample Paragraph:</label><br>
            <textarea id="sampleParagraph" name="sample_paragraph" rows="4" cols="50" required ></textarea><br>
        </div>
        <div class="form-group" >
            <label for="designedBy">Designed By:</label><br>
            <input type="text" id="designedBy" name="designed_by" required>
        </div>
        <div class="form-group">
            <label for="fontLicense">Font License:</label><br>
            <input type="text" id="fontLicense" name="font_license" required >
        </div>
        <div class="form-group" >
            <label for="fontURL">Font URL:</label><br>
            <input type="text" id="fontURL" name="font_url" required >
        </div>
        <div class="form-group" >
            <label for="submitterName">Submitter Name:</label><br>
            <input type="text" id="submitterName" name="submitter_name" required >
        </div>
        <div class="form-group" >
            <label for="email">Email ID:</label><br>
            <input type="email" id="email" name="email" required >
        </div>
        <div class="form-group" >
            <label for="fontfile">Font File (TTF, OTF, WOFF, etc.):</label><br>
            <input type="file" id="fontfile" name="font_file" accept=".ttf,.otf,.woff,.woff2" required >
        </div>
        <button type="submit" id="submitBtn" >Submit</button>
    </form>
</div>
<script>
    document.getElementById("submitBtn").addEventListener("click", validateForm)
    function isValidEmail(email) {
        var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email);
    }

    function isValidFileExtension(fileName, validExtensions) {
        var fileExtension = fileName.split('.').pop().toLowerCase();
        return validExtensions.includes(fileExtension);
    }

    console.log("form validated and sending request");
    // Function to validate the form
    function validateForm(e) {
        e.preventDefault();
        var email = document.getElementById('email').value;
        var fileName = document.getElementById('fontfile').value;
        var validExtensions = ['ttf', 'otf', 'woff', 'woff2'];

       
        if (!isValidEmail(email)) {
            alert('Invalid email address. Please enter a valid email.');
            return false;
        }

        if (!isValidFileExtension(fileName, validExtensions)) {
            alert('Invalid file format. Please upload a file with valid extensions: ' + validExtensions.join(', '));
            return false;
        }
       
        var font_name = document.getElementById('fontName').value;
        var font_style = document.getElementById('fontStyle').value;
        var sample_paragraph = document.getElementById('sampleParagraph').value;
        var designed_by = document.getElementById('designedBy').value;
        var font_license = document.getElementById('fontLicense').value;
        var font_url = document.getElementById('fontURL').value;
        var submitter_name = document.getElementById('submitterName').value;
        var fontFile = document.getElementById('fontfile').files[0];
         // Check if any field is empty
         if (!font_name || !font_style || !sample_paragraph || !designed_by || !font_license || !font_url || !submitter_name || !email || !fontFile) {
            alert('All fields are required. Please fill out all fields.');
            return;
        }
        
        var formData = new FormData();
        formData.append('font_name', font_name);
        formData.append('font_style', font_style);
        formData.append('sample_paragraph', sample_paragraph);
        formData.append('designed_by', designed_by);
        formData.append('font_license', font_license);
        formData.append('font_url', font_url);
        formData.append('submitter_name', submitter_name);
        formData.append('email', email);
        formData.append('fontfile', fontFile);
        // Make an AJAX request to submit the form
        $.ajax({
            url: '/submit-suggestion',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function(response) {
                alert(response.message);
                window.location.href="/";
            },
            error: function(error) {
                alert(error);
                console.error('Error:', error);
            }
        });
    }
</script>
</body>
</html>